<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentacion.controladores.categorias.ControladorCategoriasABM">
   <center>
      <BorderPane prefHeight="782.0" prefWidth="1013.0">
         <center>
            <TreeView fx:id="treeViewCategorias" editable="true" onMouseClicked="#categoriaSeleccionada" prefHeight="645.0" prefWidth="715.0" />
         </center>
         <top>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER" prefHeight="64.0" prefWidth="836.0" style="-fx-background-color: #303030;">
                     <children>
                        <Button fx:id="btnAgregarCategoria" disable="true" mnemonicParsing="false" onMouseClicked="#agregarCategoria" prefHeight="70.0" prefWidth="112.0" text="Agregar " textFill="WHITE">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="btnModificarCategoria" disable="true" mnemonicParsing="false" onMouseClicked="#modificarCategoria" prefHeight="85.0" prefWidth="117.0" text="Modificar">
                           <HBox.margin>
                              <Insets left="1.0" right="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="btnEliminarCategoria" disable="true" mnemonicParsing="false" onMouseClicked="#eliminarCategoria" prefHeight="85.0" prefWidth="117.0" text="Eliminar">
                           <HBox.margin>
                              <Insets left="1.0" right="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                  <HBox fx:id="HboxSeparador2" prefHeight="3.0" prefWidth="721.0" style="-fx-background-color: #C1C1C1;" />
                  <HBox alignment="CENTER_LEFT" prefHeight="64.0" prefWidth="836.0" style="-fx-background-color: #91DC5A;">
                     <children>
                        <Text fx:id="lblTitulo" strokeType="OUTSIDE" strokeWidth="0.0" text="&gt;Categorias">
                           <font>
                              <Font name="System Bold" size="22.0" />
                           </font>
                        </Text>
                     </children>
                  </HBox>
                  <HBox fx:id="HboxSeparador21" prefHeight="3.0" prefWidth="721.0" style="-fx-background-color: #C1C1C1;" />
               </children>
            </VBox>
         </top>
      </BorderPane>
   </center>
   <left>
      <HBox fx:id="HboxSeparadorLeft" prefHeight="3.0" prefWidth="3.0" style="-fx-background-color: #C1C1C1;" BorderPane.alignment="CENTER">
         <cursor>
            <Cursor fx:constant="W_RESIZE" />
         </cursor>
      </HBox>
   </left>
</BorderPane>
